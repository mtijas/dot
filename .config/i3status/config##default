# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format = "i3bar"
    colors = true
    color_good = "#90DD8C"
    color_degraded = "#F8FF6F"
    color_bad = "#FE4F00"
    interval = 5
}

#order += "ipv6"
order += "run_watch VPN"
#order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
#order += "battery all"
order += "load"
order += "cpu_usage"
order += "cpu_temperature 1"
order += "memory"
order += "volume master"
order += "tztime local"

run_watch VPN {
    pidfile = "/sys/class/net/netherlands1/dev_id"
}

wireless _first_ {
    format_up = "W: (%quality at %essid) %ip"
    format_down = "W: down"
}

ethernet _first_ {
    format_up = "E: %ip"
    format_down = "E: down"
}

battery all {
    format = "%status %percentage %remaining"
}

cpu_temperature 1 {
    format = "%degrees °C"
    max_threshold = "80"
    format_above_threshold = "WARNING: %degrees °C"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

cpu_usage {
    format = "%usage"
    degraded_threshold = "50"
    format_above_degraded_threshold = "%usage"
    max_threshold = "95"
    format_above_threshold = "WARNING: %usage"
}

disk "/" {
    format = "%avail"
}

load {
    format = "%1min"
}

memory {
    memory_used_method = "memavailable"
    format = "%used"
    threshold_degraded = "2G"
    format_degraded = "MEMORY LOW: %available avail"
}

volume master {
    format = "♪: %volume"
    format_muted = "♪: muted (%volume)"
    device = "pulse:alsa_output.usb-FiiO_DigiHug_USB_Audio-01.analog-stereo"
}

tztime local {
    format = "%d.%m %H:%M"
}
